<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_weight="30">
            <ImageView
                android:id="@+id/imgHomeFoodImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_default_food_icon"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/ParentRestaurentDetails"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">

            <TextView
                android:id="@+id/txtHomeResturantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="Name of the Resturent"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/txtHeaderResturantPriceForOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_rupee"
                android:text="250"
                android:textSize="16sp"
                android:layout_below="@+id/txtHomeResturantName"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10">
            <ImageView
                android:id="@+id/imgHomefavouriteImage"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:src="@drawable/ic_default_hollo_favourite"
                android:scaleType="fitCenter"
                />
            <TextView
                android:id="@+id/txtHomeResturantRating"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/ic_star"
                android:text="4.5"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#FFA100"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>