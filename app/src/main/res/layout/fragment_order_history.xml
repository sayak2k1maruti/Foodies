<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.orderHistory">

    <TextView
        android:id="@+id/txtPreviousOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/your_previous_order"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPreviousRestaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/txtPreviousOrder"
        android:layout_marginTop="5dp"/>
    <RelativeLayout
        android:id="@+id/progressLayoutOrderHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">
        <ProgressBar
            android:id="@+id/progressBarOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</RelativeLayout>