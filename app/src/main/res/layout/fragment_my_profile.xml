<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.myProfile">

 <RelativeLayout
     android:id="@+id/upperPortion"
     android:layout_width="match_parent"
     android:layout_height="220dp"
     android:background="@color/green"/>

    <RelativeLayout
        android:id="@+id/lowerPortion"
        android:layout_below="@+id/upperPortion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"/>
    <TextView
        android:id="@+id/txtprofilePicLetter"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/round"
        android:text="M"
        android:textAllCaps="true"
        android:gravity="center"
        android:textSize="50sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/txtProfileName"
        android:layout_below="@+id/upperPortion"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="name"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/rounded_text_view"/>
    <TextView
        android:id="@+id/txtProfileMobile"
        android:layout_below="@+id/txtProfileName"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="phone"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/rounded_text_view"/>
    <TextView
        android:id="@+id/txtProfileEmail"
        android:layout_below="@+id/txtProfileMobile"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="email"
        android:textStyle="italic"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/rounded_text_view"/>
    <TextView
        android:id="@+id/txtProfileAddress"
        android:layout_below="@+id/txtProfileEmail"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/rounded_text_view"/>
</RelativeLayout>